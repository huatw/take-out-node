{
  "name": "take-food-out",
  "version": "0.1.0",
  "author": "huatw",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production ts-node src/app.ts",
    "dev": "nodemon --exec ts-node src/app.ts",
    "io": "nodemon --exec ts-node src/websocket",
    "seed": "ts-node src/seeds",
    "test": "jest"
  },
  "jest": {
    "roots": [
      "<rootDir>"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "bcrypt": "^2.0.1",
    "body-parser": "^1.18.2",
    "connect-redis": "^3.3.3",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-graphql": "^0.6.12",
    "express-session": "^1.15.6",
    "graphql": "^0.13.2",
    "mongoose": "^5.0.16",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "socket.io": "^2.1.0"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^2.0.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/cors": "^2.8.4",
    "@types/express": "^4.11.1",
    "@types/express-graphql": "^0.6.1",
    "@types/express-session": "^1.15.8",
    "@types/graphql": "^0.13.1",
    "@types/jest": "^22.2.3",
    "@types/mongoose": "^5.0.13",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.0.8",
    "@types/passport": "^0.4.5",
    "@types/socket.io": "^1.4.33",
    "jest": "^22.4.3",
    "nodemon": "^1.12.1",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3"
  }
}
